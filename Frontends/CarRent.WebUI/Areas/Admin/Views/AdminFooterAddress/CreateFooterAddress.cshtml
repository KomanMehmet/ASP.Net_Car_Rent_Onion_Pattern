@model CreateFooterAddressDto


@{
    ViewData["Title"] = "CreateFooterAddres";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilgileri aşağıdaki panelden girebilirsiniz. Temanın bozulmaması için lütfen bir adet adres giriniz.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adres Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhoneNumber">Telefon Numarası</label>
                                <input type="tel" class="form-control" id="exampleInputPhoneNumber" asp-for="PhoneNumber" placeholder="Telefon Numarası Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="email" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email Adresi Giriniz.'">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adres Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


