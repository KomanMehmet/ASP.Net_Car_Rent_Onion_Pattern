@model CreateTestimonialDto


@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Referans Bilgisini Güncelle</h4>
                        <p class="card-subtitle mb-4"> Referans Bilgisini Güncelleme Sayfasıdır.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Adı Soyadı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="name" placeholder="Ad-Soyad bilgisini Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Meslek</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Meslek Bilgisini Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Yorum</label>
                                <input type="text" class="form-control" id="exampleInputComment" asp-for="comment" placeholder="Yorum Bilgisini Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhotoUrl">Fotoğraf</label>
                                <input type="text" class="form-control" id="exampleInputPhotoUrl" asp-for="imageUrl" placeholder="Fotoğraf Url Adresini Giriniz.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


