@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmetlerimiz Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sunulan Hizmetlere Ait Bilgilerin Girildiği Alandır. Aşağıdaki Panelden Yeni Hizmetler Ekleyebilir, Silebilir ve Güncelleyebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hizmet Adı</th>
                                        <th>Hizmet Açıklaması</th>
                                        <th>Icon Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.IconUrl</td>
                                            <td><a href="/Admin/AdminService/RemoveService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminService/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-primary">Yeni Hizmet Bilgisi Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



