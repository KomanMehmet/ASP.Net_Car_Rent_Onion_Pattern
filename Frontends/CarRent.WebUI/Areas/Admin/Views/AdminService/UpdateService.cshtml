@model UpdateServiceDto


@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hizmet Bilgisi Güncelle</h4>
                        <p class="card-subtitle mb-4">Sunulacak Hizmet Bilgisini Güncelleme Sayfasıdır.</p>

                        <form method="post">
                            <input type="hidden" asp-for="ServiceID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Hizmet Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="Hizmet Adını Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Hizmet Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Hizmet Açıklamasını Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Hizmete Ait Iconic Görsel Adresi</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="Icon Url Adresini Giriniz.">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hizmeti Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


