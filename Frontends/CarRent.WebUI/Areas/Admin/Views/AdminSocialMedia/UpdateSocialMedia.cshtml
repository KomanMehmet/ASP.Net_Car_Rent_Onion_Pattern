@model UpdateSocialMediaDto


@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Bilgisini Güncelle</h4>
                        <p class="card-subtitle mb-4">Sosyal Medya Bilgisini Güncelleme Sayfasıdır.</p>

                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Adını Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL Adresi</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Url Adresini Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Icon</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="Icon" placeholder="Icon Url Adresini Giriniz.">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


