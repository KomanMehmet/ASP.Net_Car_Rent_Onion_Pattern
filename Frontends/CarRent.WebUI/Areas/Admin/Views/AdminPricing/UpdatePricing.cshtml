@model UpdatePricingDto


@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Ödeme Periyodu Bilgisi Güncelle</h4>
                        <p class="card-subtitle mb-4">Pricing alanına veri girişini aşağıdaki panelden yapabilirsiniz. </p>

                        <form method="post">
                            <input type="hidden" asp-for="PricingID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Ödeme Periyodu</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme Periyodu Bilgisini Giriniz.">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Ödeme Periyodu Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


