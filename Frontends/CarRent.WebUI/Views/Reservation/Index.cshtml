@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="col-md-8 block-9 mb-md-5 mx-auto" style="padding-top: 50px;">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success text-center">Araç Rezervasyon Formu</h3>

            <input type="hidden" asp-for="CarID" value="@ViewBag.v3" class="form-control" placeholder="Almak İstediğiniz Araç">

        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Soyadınız</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Mail Adresiniz</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>
            <input type="text" asp-for="PhoneNumer" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Alınmak İstenen Lokasyon</label>
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>İade Edilecek Lokasyon</label>
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" asp-for="Age" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input type="text" asp-for="DriverLicenseYear" class="form-control" placeholder="">
        </div>
        <div class="form-group">
            <label>Varsa Eklemek İstedikleriniz</label>
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder=""></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

